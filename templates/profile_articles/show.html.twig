{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="content">
    <h1>Articles</h1>

    <table class="tableshow">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>image</th>
                <td><img src="{{ asset('uploads/' ~ article.miniature) }}" alt="{{ article.nom|raw|e('html_attr') }}" width="500px" height="auto"></td>
            </tr>
            <tr>
                <th>Catégorie</th>
                <td>{{ article.categorie }}</td>
            </tr>
                <th>Description</th>
                <td>{{ article.description|nl2br}}</td>
            </tr>

        </tbody>
    </table>

    <a href="{{ path('app_profile_articles_index') }}">retour à la liste</a>

    <a href="{{ path('app_profile_articles_edit', {'id': article.id}) }}">Modifier</a>

    {{ include('profile_articles/_delete_form.html.twig') }}
</div>
{% endblock %}
