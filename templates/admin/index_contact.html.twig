{% extends 'base.html.twig' %}

{% block title %}Index des contacts{% endblock %}

{% block body %}
<div class="content">
    <h1>Tous les contacts</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>Message</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contact %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.auteur.email }}</td>
                <td>{{ contact.message }}</td>
                <td>
                    <a href="{{ path('app_admin_show_contact', {'id': contact.id}) }}">voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun contact trouv√©</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}">Retour au menu</a>
</div>
{% endblock %}