{% extends 'base.html.twig' %}

{% block title %}Index des articles{% endblock %}

{% block body %}
<div class="content">
    <h1>Tous les articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Catégorie</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for articles in articles %}
            <tr>
                <td>{{ articles.id }}</td>
                <td>{{ articles.nom }}</td>
                <td>{{ articles.categorie }}</td>
                <td>{{ articles.description }}</td>
                <td>
                    <a href="{{ path('app_admin_show_articles', {'id': articles.id}) }}">voir</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun articles trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}">Retour au menu</a>
</div>
{% endblock %}