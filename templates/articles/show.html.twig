{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="content">
    <h1>Articles</h1>

    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Miniature</th>
                <td><img src="{{ asset('uploads/' ~ article.miniature) }}" alt="{{ article.nom|raw|e('html_attr') }}" width="500px" height="auto"></td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ article.auteur.email }}</td>
            </tr>
        </tbody>
    </table>
    

    <a href="{{ path('app_articles_index') }}">back to list</a>
</div>
{% endblock %}
